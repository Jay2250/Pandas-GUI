<PandasApp>:
    orientation: 'horizontal'
    
    # Left Side Buttons
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.2
        spacing: 10
        padding: 10
        Button:
            text: 'Load CSV/Excel'
            on_press: root.load_data()
        Button:
            text: 'Show Head'
            on_press: root.show_head()
        Button:
            text: 'Show Info'
            on_press: root.show_info()
        Button:
            text: 'Show Describe'
            on_press: root.show_describe()
        Button:
            text: 'Show Null Counts'
            on_press: root.show_null_counts()
        Button:
            text: 'Drop NA'
            on_press: root.drop_na()
        Button:
            text: 'Fill NA'
            on_press: root.fill_na()
        Button:
            text: 'Remove Duplicates'
            on_press: root.remove_duplicates()
        Button:
            text: 'Export Data'
            on_press: root.export_data()

    # Center Section for Data Display
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.6
        padding: 10

        ScrollView:
            size_hint: (1, 1)
            GridLayout:
                id: data_grid
                cols: 1
                size_hint_x: None
                width: self.minimum_width
                row_default_height: '40dp'
                row_force_default: True
            


    # Right Side Controls (filter, group, plot, etc.)
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.2
        spacing: 10
        padding: 10
        Label:
            text: 'Filter Column:'
        Spinner:
            id: filter_column
            text: 'None'
            values: []
        Label:
            text: 'Filter Value:'
        TextInput:
            id: filter_value
            multiline: False
        Button:
            text: 'Apply Filter'
            on_press: root.apply_filter()
        
        Label:
            text: 'Group By:'
        Spinner:
            id: group_column
            text: 'None'
            values: []
        Label:
            text: 'Agg Function:'
        Spinner:
            id: agg_function
            text: 'None'
            values: ['sum', 'mean', 'count', 'max', 'min']
        Button:
            text: 'Apply Grouping'
            on_press: root.apply_grouping()
        
        Label:
            text: 'X Column:'
        Spinner:
            id: x_column
            text: 'None'
            values: []
        Label:
            text: 'Y Column:'
        Spinner:
            id: y_column
            text: 'None'
            values: []
        Label:
            text: 'Plot Type:'
        Spinner:
            id: plot_type
            text: 'None'
            values: ['line', 'bar', 'hist', 'scatter']
        Button:
            text: 'Plot Data'
            on_press: root.plot_data()
